{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-I",
                "/opt/systemc/include",
                "-I",
                "../include",
                "-I",
                "../Utilities/include",
                "-L",
                "/opt/systemc/lib-macosxunknown",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lsystemc.2.3.4",
                "-lm",
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}